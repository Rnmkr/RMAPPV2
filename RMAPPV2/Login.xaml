<Page
    x:Class="RMAPPV2.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RMAPPV2"
    mc:Ignorable="d"
    d:DesignHeight="768"
    d:DesignWidth="1366"
    Loaded="Page_Loaded"
    Title="Login">

    <Grid
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Width="1366"
        Height="768">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="auto" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="auto" />
        </Grid.RowDefinitions>
        <Label
            Background="#FF778899"
            Name="lblTitle"
            Grid.Row="0"
            Content="AUTORIZACIÓN DE CAMBIO"
            Margin="0"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            FontSize="36"
            FontWeight="Bold"
            Foreground="Wheat" />
        
        <StackPanel
            Grid.Row="1"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Label
                Name="lblHora"
                Content="{Binding Hora}"
                Margin="0"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                FontWeight="Bold"
                VerticalContentAlignment="Center"
                FontSize="500"
                Foreground="White"
                HorizontalAlignment="Center"
                FontFamily="Arial" />
            <Label
                Name="lblDots"
                Content=":"
                Margin="0"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                FontWeight="Bold"
                VerticalContentAlignment="Center"
                FontSize="500"
                Foreground="White"
                HorizontalAlignment="Center"
                FontFamily="Arial" />
            <Label
                Name="lblMinutos"
                Content="{Binding Minutos}"
                Margin="0"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                FontWeight="Bold"
                VerticalContentAlignment="Center"
                FontSize="500"
                Foreground="White"
                HorizontalAlignment="Center"
                FontFamily="Arial" />
        </StackPanel>
        <Label
            Grid.Row="2"
            Name="TextBoxEstadoConexion"
            Content="CONECTANDO..."
            IsEnabled="False"
            Margin="0"
            FontWeight="Bold"
            FontSize="36"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Foreground="Wheat"
            Background="#FF778899"
            BorderBrush="{x:Null}" />
